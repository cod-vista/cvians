{
  "name": "@codvista/cvians-core",
  "version": "2.1.3",
  "description": "Core components for the Cvians UI library - Excel-like tables and more",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "react",
    "preact",
    "components",
    "ui",
    "typescript",
    "cvians",
    "table",
    "excel",
    "filtering",
    "sorting"
  ],
  "author": {
    "name": "Taha Kazmi",
    "url": "https://github.com/cod-vista"
  },
  "license": "MIT",
  "homepage": "https://github.com/cod-vista/cvians#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cod-vista/cvians.git"
  },
  "bugs": {
    "url": "https://github.com/cod-vista/cvians/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=16.8.0 <21.0.0",
    "react-dom": ">=16.8.0 <21.0.0"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.451.0",
    "tailwind-merge": "^2.5.3",
    "tailwindcss": "^4.1.16",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "eslint": "^9.13.0",
    "preact": "^10.24.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  }
}
